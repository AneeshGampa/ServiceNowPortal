        <template><![CDATA[<div type="text/ng-template" id="appDetailsModalTemplate">
  <div class="panel panel-default">
    <div class="panel-body wrapper-xl">
      <div class=" detailContent row">
        <div class="col-md-3" >
          <img class="m-r-sm item-image pull-left" ng-src="{{reco.appImage}}" ng-if="reco.appImage"/>
          <span ng-if="!reco.appImage">
            <img class="item-image" ng-src="appstore_unknown_trueblue.png" ng-if="reco.softwareFunctionality == 'N/A or Unknown'" />
            <img class="item-image" ng-src="appstore_dev_tools_trueblue.png" ng-if="reco.softwareFunctionality == 'Development Tool'" />
            <img class="item-image" ng-src="appstore_claims_processing_trueblue.png" ng-if="reco.softwareFunctionality == 'Claims Processing'" />
            <img class="item-image" ng-src="appstore_web_dev_trueblue.png" ng-if="reco.softwareFunctionality == 'Web Development'" />
            <img class="item-image" ng-src="appstore_hardware_driver_trueblue.png" ng-if="reco.softwareFunctionality == 'Hardware Drivers'" />
            <img class="item-image" ng-src="appstore_web_only_trueblue.png" ng-if="reco.softwareFunctionality == 'Web Only - No Install' || reco.softwareFunctionality == 'Web Only - Has Install' || reco.softwareFunctionality == 'Web Only - Install Pre-Reqs'" />
            <img ng-src="appstore_default_icon_trueblue.png" class="m-r-sm item-image pull-left" 
                 ng-if="!reco.appImage && reco.softwareFunctionality != 'N/A or Unknown' 
                        && reco.softwareFunctionality != 'Development Tool' && reco.softwareFunctionality != 'Claims Processing' && reco.softwareFunctionality != 'Web Development'
                        && reco.softwareFunctionality != 'Web Only - No Install' && reco.softwareFunctionality != 'Web Only - Has Install' && reco.softwareFunctionality != 'Web Only - Install Pre-Reqs'
                        && reco.softwareFunctionality != 'Web Development' && reco.softwareFunctionality != 'Hardware Drivers'"/>
          </span>

        </div>
        <div class="col-md-9 text-larger" id="text-darker">
          <div  class="text-darker bottom-pad app-name" title="{{reco.applicationName}}"><b>Application Name: </b>{{reco.applicationName}}</div>
          <div class="text-darker bottom-pad item-version" title="{{reco.version}}"><b>Version: </b>{{reco.version}}</div>
          <div class="text-darker bottom-pad item-short-desc" title="{{reco.applicationId}}"><b>Application id: </b>{{reco.applicationId}}</div>
          <div  class="text-darker bottom-pad item-short-desc" title="{{reco.businessPurpose}}"><b>Business Purpose: </b>{{reco.businessPurpose}}</div>
          <div  class="text-darker bottom-pad" title="{{reco.approvedAppOS}}"><b>Approved OS: </b>{{reco.approvedAppOS}}</div>
          <div class="text-darker bottom-pad" title="{{reco.vendorName}}" ng-if="reco.vendor_or_Internal != 'I'"><b>Vendor: </b> 
            <span ng-if="reco.vendorName != ''">{{reco.vendorName}}</span> 
            <span ng-if="reco.vendorName == ''">(empty)</span> 
          </div>
          <div class="text-darker bottom-pad" title="{{reco.softwareOwner}}"><b>Owner: </b>{{reco.softwareOwner}}</div>

          <div class="text-center">
          </div>
        </div>
      </div>
    </div>

    <div class="panel-footer text-right">
      <div class="row">
        <div class="col-md-12">
          <button class="euts-btn-lg euts-btn-blue" ng-click="c.closeModal()">${Close}</button>
          <button class="euts-btn-lg euts-btn-green" ng-if="reco.approvedApp == '1' && reco.appHide == '0'" style="margin-left: 5px;" ng-click="getDetails(reco.applicationId)">
            ${Request App}
          </button>
          <!--START Added "View App" display logic when app is not approved or when appHide value set to 1-->
          <button class="euts-btn-lg euts-btn-green" ng-if="reco.approvedApp == '0' || reco.appHide == '1'" ng-click="c.getDetails(item.applicationId)" style="margin-left: 5px;">${View App}</button>
          <!--END "View App" display logic"-->
        </div>
      </div>
    </div>

  </div>
  <style>
    #more-info-image {
      width: 100% !important;
      position: relative;
      margin-right: 10px !important;
      max-height: 187px !important; 
      max-width: 187px !important; 
      margin-left: -5px;
    }

    #text-darker {
      color: #636363 !important;
    }

    .app-name {
      font-size: 18px;
    }

    .modal-content {
      position: relative;
      background-color: #fff;
      border: 1px solid #999;
      border: 1px solid rgba(0, 0, 0, .2);
      border-radius: 6px;
      -webkit-box-shadow: 0 3px 9px rgba(0, 0, 0, .5);
      box-shadow: 0 3px 9px rgba(0, 0, 0, .5);
      background-clip: border-box;
      outline: 0;
    }

    .panel-footer {
      padding: 10px 15px;
      background-color: #ffffff; 
      border-top: 1px solid transparent;
      border-bottom-right-radius: 3px;
      border-bottom-left-radius: 3px;
    }

    .panel-body {
      padding: 45px 30px !important;
    }

    .detailNav {
      padding: 0 15%;
      text-align: justify;
      background: #fff;
      line-height: 5.5rem;
      display: flex;
      justify-content: space-between;
      font-size:18px;

    }

    .nav-link a{
      color: #373d3e;!important
      border-bottom: 3px solid #373d3e;
    }

    .appOverview{
      margin-top:10px;
      background: #fff;
      max-width:1500px;
      margin-right: auto;
      margin-left: auto;
    }
    .detailContent{
      background: #fff;
      max-width:1500px;
      margin-right: auto;
      margin-left: auto;
    }

    .appDetails{
      margin-top:10px;
      background: #fff;
      max-width:1500px;
      margin-right: auto;
      margin-left: auto
    }

    .item-image {
      max-height: 20rem;
      max-width: 90%;
      transition: all .3s ease-in-out;
    }

    .bottom-pad {
      padding-bottom: 5px;
    }

    @media screen and (min-width: 768px) {
      .modal-dialog {
        width: calc(50vw - 234px) !important;   
      }
    }   

    @media screen and (max-width: 1650px) {
      .modal-dialog {
        width: calc(60vw - 234px) !important;   
      }
    }      

    @media screen and (max-width: 1350px) {
      .modal-dialog {
        width: calc(80vw - 234px) !important;   
      }
    }   

    @media screen and (max-width: 1000px) {
      .modal-dialog {
        width: calc(100vw - 234px) !important;   
      }
    }  

    @media screen and (max-width: 750px) {
      .modal-dialog {
        width: calc(120vw - 234px) !important;   
      }
    }  

    @media screen and (max-width: 560px) {
      .modal-dialog {
        width: calc(135vw - 234px) !important;   
      }
    } 

  </style>
</div>]]></template>
